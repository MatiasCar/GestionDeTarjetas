    ViewData["Title"] = "Débitos Visa";
}

@using GestionDeTarjetas.Models.ViewModels

@model DatosGeneracionArchivoViewModel

<div class="wrapper d-flex align-items-stretch">
    <partial name="../Shared/_pvSidebar.cshtml" />


    @*     etiqueta deprecada, no admite duplicados
        @Html.Partial("_pvSidebar")*@

    <!-- Page Content  -->
    <div id="content" class="p-4 p-md-5">

        <!-- alertas inicio-->
        <div onclick="cerrarExcel()" class="alert alert-primary" id="alertExcel" role="alert">
            Se ha exportado el documento a Excel
        </div>
        <!-- alertas fin-->

        <div class="derecha-config">
            <div class="displayInline">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear"
                     viewBox="0 0 16 16">
