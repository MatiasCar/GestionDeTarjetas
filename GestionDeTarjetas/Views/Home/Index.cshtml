            </div>
            <div class="displayInline ">
                <a class="naranja" asp-area="" asp-controller="Configuracion" asp-action="GuardarVisa">Configuración</a>
            </div>
        </div>

        <h1 class="mb-4">Débitos Visa</h1>

        <hr /> <br />

        <form method="post">

            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <h4  asp-for="Presentacion">Fecha de Presentación</h4>
                    <input asp-for="Presentacion" type="date" class="form-control" id="Presentacion">
                    <article id="error-fecha-presentacion"></article>
                </div>
            </div>
            <br>

            <h4 for="Fecha Vencimiento">Fecha de Vencimiento</h4>
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label class="titulos-labels" asp-for="Desde">Desde</label>
                    <input asp-for="Desde" type="date" class="form-control " id="Desde">
                    <article id="error-fecha-desde"></article>

                </div>
                <div class="form-row">
                    <div class="col-md-4 mb-3">
                        <label class="titulos-labels" asp-for="Hasta">Hasta</label>
                        <input asp-for="Hasta" type="date" class="form-control" id="Hasta">
                        <article id="error-fecha-hasta"></article>
                    </div>
                </div>
            </div>

             <br />
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary submit-button" asp-controller="Home" asp-action="Grabar" value="Generar Importación" id="grabar_txt">Generar Presentación</button>
                <button type="submit" class="btn btn-primary submit-button" asp-controller="Home" asp-action="GenerarReporte" value="Generar Reporte" id="grabar_excel">Generar Reporte</button>
            </div>
        </form>
    </div>
</div>


<script src="~/js/base.js" asp-append-version="true"></script>
<script src="~/js/validacionesForm.js" asp-append-version="true"></script>